<mvc:View

	controllerName="iamsoft.filav.cliente.controller.EntrarNaFila"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m">
	<App id="app">
    <pages>
      <Page title="{i18n>title}">
        <content>

	<ObjectHeader
		binding="{turno>/}"
        title="{
            path: 'turno>/',
            formatter: '.formatter.turnoStatusTitle'
            }"
		number="{turno>posicao}º Posição"
        visible="{view>/header/visible}"
		numberUnit="" >
		<statuses>
			<ObjectStatus
				text="{
                    path: 'turno>/',
                    formatter: '.formatter.turnoStatusText'
                    }"
				state="{
                    path: 'turno>/',
                    formatter: '.formatter.turnoStatusState'
                    }" />
		</statuses>
		<attributes>
			<ObjectAttribute text="Local: {turno>fila/local/nome}" />
			<ObjectAttribute text="Fila: {turno>fila/nome}" />
			<ObjectAttribute text="Posto: {turno>posto/nome}" />
			<ObjectAttribute text="Ingresso: {turno>creation_date}" />
		</attributes>
	</ObjectHeader>

          <mvc:XMLView viewName="iamsoft.filav.cliente.view.EntrarNaFila"/>
          <mvc:XMLView viewName="iamsoft.filav.cliente.view.EsperandoNaFila"/>

        </content>

		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Sair da Fila" type="Reject"
                    press="onSairDaFila" visible='{view>/sairDaFilaButtonVisible}'/>
				<Button text="Atualizar" press="onAtualizar"/>
			</Toolbar>
		</footer>

      </Page>
    </pages>
	</App>
</mvc:View>
