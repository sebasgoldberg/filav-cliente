<mvc:View

	controllerName="iamsoft.filav.cliente.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m">
	<App id="app">
    <pages>
      <Page>
        <content>

	<ObjectHeader
		binding="{/ProductCollection/0}"
		title="{Name}"
		number="{
			parts:[{path:'Price'},{path:'CurrencyCode'}],
			type: 'sap.ui.model.type.Currency',
			formatOptions: {showMeasure: false}
		}"
		numberUnit="{CurrencyCode}" >
		<statuses>
			<ObjectStatus
				text="Some Damaged"
				state="Error" />
			<ObjectStatus
				text="In Stock"
				state="Success" />
		</statuses>
		<attributes>
			<ObjectAttribute text="{WeightMeasure} {WeightUnit}" />
			<ObjectAttribute text="{Width} x {Depth} x {Height} {DimUnit}" />
			<ObjectAttribute text="{Description}" />
			<ObjectAttribute
				text="www.sap.com"
				active="true"
				press="handleLinkObjectAttributePress" />
		</attributes>
	</ObjectHeader>

          <mvc:XMLView viewName="iamsoft.filav.cliente.view.EntrarNaFila"/>
          <mvc:XMLView viewName="iamsoft.filav.cliente.view.EsperandoNaFila"/>

        </content>
      </Page>
    </pages>
	</App>
</mvc:View>
