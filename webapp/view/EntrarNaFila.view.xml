<mvc:View
	controllerName="iamsoft.filav.cliente.controller.EntrarNaFila"
    xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns:p="com.penninkhof.controls"
	xmlns="sap.m">


				<FlexBox
                visible="{view>/form/visible}"
					alignItems="Center"
					justifyContent="Center"
                    >
					<items>

            <f:Form editable="true"
                >
                <f:layout>
                    <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false" />
                </f:layout>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Fila">
                            <f:fields>
                                <Select
                                    id="filaSelect"
                                    forceSelection="true"
                                    selectedKey="{view>/form/fila}"
                                    items="{
                                        path: '/',
                                        sorter: { path: 'nome' }
                                    }">
                                    <core:Item key="{id}" text="{nome}" />
                                </Select>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement>
                            <Button text="Entrar" type="Emphasized"
                                press="onEntrar" id="entrarButton">
                            </Button>
                        </f:FormElement>
                        <f:FormElement>
                            <Button text="Cancelar" type="Neutral"
                                press="onCancelar" id="cancelarButton">
                            </Button>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:Form>

					</items>
				</FlexBox>

				<FlexBox
                        visible="{view>/qrcode/visible}"
					alignItems="Center"
					justifyContent="Center">
					<items>

					<Panel class="sapUiResponsiveMargin"
                        >
						<p:QRCode code="{view>/qrcode/qrcode}" />
					</Panel>

					</items>
				</FlexBox>



</mvc:View>
